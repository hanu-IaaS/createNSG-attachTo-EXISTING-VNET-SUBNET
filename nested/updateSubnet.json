{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "virtualNetworkName": {
        "type": "string"
      },
      "Subnet1Name": {
        "type": "string"
      },
      "Subnet2Name": {
          "type": "string"
      },
      "Subnet3Name": {
          "type": "string"
      },
      "Subnet1Prefix": {
        "type": "string"
      },
      "Subnet2Prefix": {
          "type": "string"
      },
      "Subnet3Prefix": {
          "type": "string"
      },
      "Subnet1NSG": {
          "type":"string"
      },
       "Subnet2NSG": {
          "type":"string"
      },
       "Subnet3NSG": {
          "type":"string"
      },  
      "Subnet1NSGId": {
        "type": "string"
      },
      "Subnet2NSGId": {
          "type": "string"
      },
      "Subnet3NSGId": {
          "type": "string"
      },
      "location": {
          "type": "string"
      }
    },
    "variables": {},
    "resources": [
        {
            "apiVersion": "2015-05-01-preview",
            "type": "Microsoft.Network/networkSecurityGroups",
            "name": "[parameters('Subnet1NSG')]",
            "location": "[parameters('location')]"
            
          },
          {
            "apiVersion": "2015-05-01-preview",
            "type": "Microsoft.Network/networkSecurityGroups",
            "name": "[parameters('Subnet2NSG')]",
            "location": "[parameters('location')]"
          },
          {
            "apiVersion": "2015-05-01-preview",
            "type": "Microsoft.Network/networkSecurityGroups",
            "name": "[parameters('Subnet3NSG')]",
            "location": "[parameters('location')]"
          },
        {
        "apiVersion": "2018-03-01",
        "type": "Microsoft.Network/virtualNetworks/subnets",
        "name": "[concat(parameters('virtualNetworkName'), '/', parameters('Subnet1Name'))]",
        "location": "[resourceGroup().location]",
        "properties": {
          "addressPrefix": "[parameters('Subnet1Prefix')]",
          "networkSecurityGroup": {
            "id": "[parameters('Subnet1NSGId')]"
          }
        }
      },
      {
          "apiVersion": "2018-03-01",
          "type": "Microsoft.Network/virtualNetworks/subnets",
          "name": "[concat(parameters('virtualNetworkName'), '/', parameters('Subnet2Name'))]",
          "location": "[resourceGroup().location]",
          "properties": {
            "addressPrefix": "[parameters('Subnet2Prefix')]",
            "networkSecurityGroup": {
              "id": "[parameters('Subnet2NSGId')]"
            }
          },
          "dependsOn": [
            "[resourceId('Microsoft.Network/networkSecurityGroups', 'parameters('Subnet1NSG')')]"
        ]
      },
      {
          "apiVersion": "2018-03-01",
          "type": "Microsoft.Network/virtualNetworks/subnets",
          "name": "[concat(parameters('virtualNetworkName'), '/', parameters('Subnet3Name'))]",
          "location": "[resourceGroup().location]",
          "properties": {
            "addressPrefix": "[parameters('Subnet2Prefix')]",
            "networkSecurityGroup": {
              "id": "[parameters('Subnet3NSGId')]"
            }
          },
          "dependsOn": [
            "[resourceId('Microsoft.Network/networkSecurityGroups', 'parameters('Subnet2NSG')')]"
        ]
         
      }
      ]
  }
  
